<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".ui.wordpage.WordFragment">

    <RelativeLayout
        android:id="@+id/relativeLayout7"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:background="#6F3C7E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_my_clock"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/clock"
            tools:ignore="ContentDescription" />

        <RelativeLayout
            android:id="@+id/word_to_search"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_toStartOf="@+id/img_detail_inform"
            android:layout_toEndOf="@+id/img_my_clock"
            android:background="@drawable/project2ground">

            <ImageView
                android:id="@+id/word_my"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:src="@drawable/search_black"
                tools:ignore="ContentDescription,UnknownId,ImageContrastCheck" />

            <TextView
                android:id="@+id/word_my_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="0dp"
                android:layout_toEndOf="@+id/word_my"
                android:background="@null"
                android:hint="搜：单词吧"
                android:paddingStart="6dp"
                android:paddingTop="8dp"
                android:textColorHint="#ffffff"
                android:textSize="14sp"
                tools:ignore="Autofill,HardcodedText,MissingPrefix,RtlHardcoded,RtlSymmetry,SpeakableTextPresentCheck,TextContrastCheck,TouchTargetSizeCheck" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/img_detail_inform"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/email"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout6"
        android:layout_width="360dp"
        android:layout_height="300dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/relativeground"
        app:layout_constraintBottom_toTopOf="@+id/word_btn_learn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:lineSpacingExtra="20sp"
            android:text="今日计划"
            android:textColor="#2196F3"
            android:textSize="28sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_alignParentStart="true"
            android:layout_marginStart="26dp"
            android:layout_marginTop="60dp"
            android:text="@string/word_number"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/word_txt_total"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView8"
            android:layout_alignParentStart="true"
            android:layout_marginStart="26dp"
            android:layout_marginTop="10dp"
            android:text="0词"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold|italic"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/word_txt_number"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView8"
            android:layout_marginStart="60dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/word_txt_total"
            android:text="0词"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold|italic"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_marginStart="100dp"
            android:layout_marginTop="60dp"
            android:layout_toEndOf="@+id/textView8"
            android:text="已学习"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="32dp"
            android:text="当前进度为："
            tools:ignore="HardcodedText" />

        <ProgressBar
            android:id="@+id/word_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="34dp"
            android:layout_toEndOf="@+id/textView12"
            tools:ignore="RtlHardcoded" />
    </RelativeLayout>

    <Button
        android:id="@+id/word_btn_learn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="105dp"
        android:background="@drawable/learnround"
        android:text="开始学习吧"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText,RtlHardcoded,TextContrastCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>